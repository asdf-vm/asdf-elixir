#!/usr/bin/env bash

releases_path=https://api.github.com/repos/elixir-lang/elixir/releases
cmd="curl -s"
if [ -n "$OAUTH_TOKEN" ]; then
  cmd="$cmd -H 'Authorization: token $OAUTH_TOKEN'"
fi
cmd="$cmd $releases_path"

sort_cmd='sort'
if sort --help | grep -q -- '-V'; then
  sort_cmd='sort -V'
fi

# Fetch all tag names, and get only second column. Then remove all unnecesary characters.
versions=$(eval $cmd | grep -oE "tag_name\": *\".{1,15}\"," | sed 's/tag_name\": *\"v//;s/\",//' | $sort_cmd)
echo $versions
